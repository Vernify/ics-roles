## auditd.conf - generated by Ansible auditd role
log_file = /var/log/audit/audit.log
log_format = {{ 'ENRICHED' if auditd_log_format_enriched | bool else 'RAW' }}
max_log_file = {{ auditd_max_log_file_mb }}
num_logs = {{ auditd_num_logs }}
priority_boost = 4
flush = {{ auditd_flush }}
freq = 50
dispatcher = /sbin/audispd
name_format = HOSTNAME
space_left_action = {{ auditd_space_left_action }}
admin_space_left_action = {{ auditd_admin_space_left_action }}
action_mail_acct = {{ auditd_action_mail_acct }}
max_log_file_action = ROTATE
write_logs = yes
tcp_listen_port = 60
